#include <iostream>;
using namespace std;


struct Studentas
{
	string vardas, pavarde;
	int nd;
	int egz;
};

int main() {
	
	//su vienais namu darbais ir egzamino rezultatu
	cout << "Iveskite varda ir pavarde bei namu darbu ir egzamino pazymius: ";
	Studentas pirmas;
	cin >> pirmas.vardas >> pirmas.pavarde >> pirmas.nd >> pirmas.egz;
	double galutinis;
	galutinis = (pirmas.nd + pirmas.egz) / 2;
	cout << "\nPavarde\t\tVardas\t\tGalutinis(Vid.)\n" << endl;
	cout << std::string(50, '*') << endl;
	cout << pirmas.pavarde << "\t\t" << pirmas.vardas << "\t\t" << galutinis << "\n";
	
	//paprasius ivesti kiek bus pazymiu

	
	return 0;
}
